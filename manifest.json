{
  "manifest_version": 2,
  "name": "Source Alert",
  "version": "0.1",
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.facebook.com/*", "http://www.facebook.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "tabs"
  ]

}
